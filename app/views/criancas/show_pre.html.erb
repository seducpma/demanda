<div id="interno5">
<% title "CRIANÇA" %>
<div class ="tabs">
<font size="5"><strong>DEMANDA  Inscrição Pré Escola nº<%=h "#{@crianca.id}" %> </strong></font></br>
 <hr/>
 <table bgcolor="#DCDCDC" width="100%">
   <tr bgcolor="#DCDCDC"  width="100%">
     <td>
       <fieldset><legend><font  size=3><b> Dados da Criança</b></font></legend>
         <table width="100%">
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Nome:</b></td>
               <td colspan="3" align="left"><%=h @crianca.nome %></td>
               <td align="left"><b>Nascimento:</b></td>
               <td align="left">  <%=h @crianca.nascimento.strftime("%d/%m/%Y")%></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Especial:</b></td>
                   <%if @crianca.n_especial == false%>
                        <td colspan="3" align="left">NÃO </td>
                    <%else%>
                         <td colspan="3" align="left"><font color="red">SIM</font></td>
                   <%end%>
               <td align="left"><b>Necessidade:</b></td>
                   <%if @crianca.necessidade.empty? %>
                        <td colspan="3" align="left"> ---- xxx ---- </td>
                    <%else%>
                        <td align="left"> <font color="red"> <%=h @crianca.necessidade%></font></td>
                   <%end%>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Mãe:</b></td>
               <td colspan="3" align="left"><%=h @crianca.mae %></td>
               <td align="left" width="4%"><b>Pai:</b></td>
               <td align="left"><%=h @crianca.pai %></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Responsável:</b></td>
               <td colspan="3" align="left"><%=h @crianca.responsavel_n %></td>
               <td align="left" width="4%"><b>Parentesco:</b></td>
               <td align="left"><%=h @crianca.parentesco %></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Endereço:</b></td>
               <td colspan="3" align="left"><%=h @crianca.endereco %> - <%=h @crianca.numero %></td>
               <td align="left" width="4%"><b>Bairro:</b></td>
               <td  align="left"><%=h @crianca.bairro %></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Complemento:</b></td>
               <td  align="left"><%=h @crianca.complemento %></td>
              <td align="left" width="4%"><b>Telefone:</b></td>
               <td align="left">  <%=h @crianca.tel1%></td>
               <td> <b>Celular:</b></td>
               <td><%=h @crianca.celular%>  </td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left"><b>Fone (rec.):</b></td>
               <td align="left" colspan="3">  <%=h @crianca.tel2%></td>
               <td><b>Nome:</b> </td>
               <td><%=h @crianca.nomerecado%>  </td>
            </tr>
            <tr bgcolor="#F5F5F5">
              <td valign="top"><b>Observações</b></td>
              <td colspan="5"> <%=h @crianca.obs%> <br/><%= render :partial => 'observacoes'  %></td>
            </tr>

          </table>
         </fieldset>
       <fieldset><legend><font  size=3><b> Dados da inscrição</b>&nbsp&nbsp <font color="blue"> (<%=@crianca.status%>)&nbsp&nbsp</font></font></legend>
         <table width="100%">
             <%if @crianca.transferencia == true and @crianca.status == 'NA_DEMANDA'  %>
             <tr ><td colspan="6"> <font size="2" color="red">
                       <b>Inscrição nº<%=h "#{@crianca.id}" %></b> - 
                       solicitação de transferêncida da unidade <b><%=h "#{@crianca.unidade_t}" %></b> para região <% if  !@crianca.regiao.nil? %>  <%=h "#{@crianca.regiao.nome}" %> (<%=h "#{@crianca.unidade_ref}" %>)<%else%><font color="blue"> <b>ERRO</b> </font><%end%></font>
                         </td>
                 </tr>
             <%end%>

       <tr bgcolor="#F5F5F5">
               <td colspan="6"><b>Trabalho Mãe: </b> &nbsp&nbsp
                                 <%if @crianca.servidor_publico == true%>
                                    SERVIDORA PÚBLICO (P1)
                                 <%else if @crianca.trabalho == true %>
                                      CTPS ASSINADA (P2)
                                       <%else if @crianca.declaracao == true %>
                                              DECLARAÇÂO TRABALHO (P3)
                                             <%else if @crianca.autonomo == true %>
                                                   AUTÔNOMO (P4)
                                                 <%else  %>
                                                    NÃO TRABALHA (P5)
                                                 <%end%>
                                             <%end%>
                                        <%end%>
                                 <%end%>
&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
                       <b>Local Trabalho:</b>&nbsp&nbsp
                                 <%if @crianca.servidor_publico == true%>
                                    <%=h @crianca.servidor_local%>  <b> &nbsp - &nbsp Fone:</b> <%=h @crianca.fone_trabalho%>
                                 <%else if @crianca.trabalho == true %>
                                         <%=h @crianca.local_trabalho%>, <%=h @crianca.num_trab%> - <%=h @crianca.bairro_trab%> <b> - Fone:</b> <%=h @crianca.fone_trabalho%>
                                       <%else if @crianca.declaracao == true %>
                                              <%=h @crianca.local_trabalho %>, <%=h @crianca.num_trab%> <b> &nbsp - &nbsp Bairro:</b> <%=h @crianca.bairro_trab%> <b> &nbsp - &nbsp Fone:</b> <%=h @crianca.fone_trabalho%>
                                             <%else if @crianca.autonomo == true %>
                                                  <%=h @crianca.atividade_autonomo%> - <%=h @crianca.local_trabalho%>, <%=h @crianca.num_trab%>  <b> &nbsp - &nbsp Fone:</b> <%=h @crianca.fone_trabalho%>
                                                 <%else  %>
                                                    Não Trabalha
                                                 <%end%>
                                             <%end%>
                                        <%end%>
                                   <%end%>
              </td>
            </tr>
           <tr bgcolor="#F5F5F5"  width="100%">
             <td align="left" width ="14%"><b>Local Inscrição:</b></td>
             <td align="left" colspan="3" ><%#=h @crianca.unidade.nome%></td>
             <td width="10%" ><b>Responsável: </b> </td>
                <% if @crianca.responsavel == false %>
                    <td  colspan="3">NÃO</td>
                <%else%>
                    <td colspan="3">SIM - <%=h @crianca.responsavel_n%> - (<%=h @crianca.parentesco%>)</td>
                <%end%>
            </tr>
            <tr bgcolor="#F5F5F5"  width="100%">
              <td  align="left"><b>Classe:</b> </td>
              <td colspan="3"align="left" ><%=@crianca.grupo.nome%> (<%=@crianca.grupo.descricao%>)</td>
              <td  align="left"><b>Período:</b> </td>
              <td valign="top"align="left" ><%=@crianca.periodo%></td>

            </tr>


            <% if @crianca.irmao == true%>
                <tr bgcolor="#F5F5F5">
                  <td><b>Irmão matriculado:</b></td>
                  <td colspan="6"valign="top"><font color="red"><b> Possui irmão matriculado na unidade: </b> <%=h @crianca.unidade_i%> </font> </font> - <font color="black"> (<b>Nome:<b/> <%=h @crianca.irmao_nome%>)</font> </td>

                </tr>
             <%else%>
               <tr bgcolor="#F5F5F5">
                 <td><b>Irmão matriculado:</b></td>
                 <td colspan="5">Não </td>
                </tr>
             <%end%>
            <% if @crianca.opcao2.nil?%>
                <tr bgcolor="#F5F5F5">
                  <td colspan="6"><b>Estudou em outra escola particular ou escola pública de outros municípios:</b> &nbsp&nbsp NÃO </font></td>

                </tr>
             <%else%>
               <tr bgcolor="#F5F5F5">
                 <td colspan="6"><b>Estudou em outra escola particular ou escola pública de outros municípios:</b> &nbsp&nbsp SIM - <%=h @crianca.opcao3%> </font></td>                </tr>
             <%end%>
            <% if @crianca.trabalho == false%> 
                <tr bgcolor="#F5F5F5">
                  <td colspan="6"><b>Mãe/responsável legal trabalha COM registro em carteira de trabalho (CTPS):</b> &nbsp&nbsp NÃO </font></td>

                </tr>
             <%else%>
               <tr bgcolor="#F5F5F5">
                 <td colspan="6"><b>Mãe/responsável legal trabalha COM registro em carteira de trabalho (CTPS):</b> &nbsp&nbsp SIM -
                       <%if !@crianca.local_trabalho.nil?%>
                          <%=h @crianca.local_trabalho%>,
                       <%end%>
                       <%if !@crianca.num_trab.nil?%>
                           <%=h @crianca.num_trab%>
                        <%end%>
                        <%if !@crianca.bairro_trab.nil?%>  
                          - <%=h @crianca.bairro_trab%>
                          <%end%>
                        <%if !@crianca.fone_trabalho.nil?%>  
                                 <b>Fone:</b> <%=h @crianca.fone_trabalho%>
                        <%end%>
                     </td>
               </tr>
             <%end%>
             <% if @crianca.declaracao == false%>
                <tr bgcolor="#F5F5F5">
                  <td colspan="6"><b>Mãe/responsável legal trabalha SEM registro em carteira de trabalho (CTPS) e/ou é profissional autônoma:</b> &nbsp&nbsp NÃO </font></td>

                </tr>
             <%else%>
               <tr bgcolor="#F5F5F5">
                 <td colspan="6"><b>Mãe/responsável legal trabalha SEM registro em carteira de trabalho (CTPS) e/ou é profissional autônoma:</b> &nbsp&nbsp SIM -
                       <%if !@crianca.local_trabalho.nil?%>
                          <%=h @crianca.local_trabalho%>,
                       <%end%>
                       <%if !@crianca.num_trab.nil?%>
                           <%=h @crianca.num_trab%>
                        <%end%>
                        <%if !@crianca.bairro_trab.nil?%>
                          - <%=h @crianca.bairro_trab%>
                          <%end%>
                        <%if !@crianca.fone_trabalho.nil?%>
                                 <b>Fone:</b> <%=h @crianca.fone_trabalho%>
                        <%end%>
                     </td>
               </tr>
             <%end%>

           <tr bgcolor="#F5F5F5"  width="100%">
               <td align="left"  colspan="6"> <b>Dia/Hora Inscrição:</b>
             <%=h @crianca.created_at.strftime("%e/%m/%Y - %H:%M horas")%> <%if !@crianca.unidade_id.nil?%> (<%=h @crianca.unidade.nome%>) <%else%> (Internet (on-line) )<%end%>
             <% if  @crianca.recadastrada == 1%>
                  &nbsp&nbsp - <b>Recadastramento:<% if !@crianca.data_rec.nil? %></b><%=h @crianca.data_rec.strftime("%e/%m/%Y - %H:%M horas")%>( <%=h @crianca.local_rec%>)<%end%>
             <%end%>

             &nbsp&nbsp - <b>Status:</b><%=h @crianca.status%>

                                                - <% if  @crianca.recadastrada == 0%>
                                                        <b>( NÃO RESCADASTRADA ) </b>
                                                    <%end%>
<!--                 <%#if @crianca.status == 'MATRICULADA'%>
                   - <%=h @crianca.matriculado%>
                 <#%end%>
                 <%#if @crianca.transferencia == true%>
                   &nbsp&nbsp - &nbsp&nbsp MATRICULADA (<%=h @crianca.unidade_t%>)
                 <%#end%>
-->
             </td>
           </tr>


         </table>
       </fieldset>
          <%session[:child]=@crianca.id %>
     </td>
  </tr>
 </table>

 <table>
         <tr>
            <td width="4%"><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
            <%if current_user.present?%>
               <%if @crianca.unidade_id == current_user.unidade_id or  current_user.unidade_id == 52%>
                  <td width="6%"align="left" ><%= button_to 'Editar', {:action => "edit_pre", :id =>@crianca}, :method => "get", :title => "Editar"%></td>
                <%end%>
                <!--<td width="4%"align="left"><%#= button_to 'Consultarxxx' ,consulta_unidade_path, :title => "Consultar" %></td>-->
           <%end%>
            <%if current_user.present?%>
                 <td><b><%= button_to 'Imprimir', onclick="javascript:MM_openBrWindow('#{impressao_pre_criancas_path(:crianca => session[:child])}','impressao', 'scrollbars=yes');", :title => "Imprimir" %> </b></td>
           <%else%>
                  <td><b><%#= button_to 'Imprimir', onclick="javascript:MM_openBrWindow('#{impressao_nao_logado_criancas_path(:crianca => session[:child])}','impressao', 'scrollbars=yes');", :title => "Imprimir" %>
                         <%= button_to 'Imprimir', onclick="javascript:MM_openBrWindow('#{impressao_pre_criancas_path(:crianca => session[:child])}','impressao', 'scrollbars=yes');", :title => "Imprimir" %>
                    </b></td>
           <%end%>
          </tr>
    </table>
 
           
</div>
